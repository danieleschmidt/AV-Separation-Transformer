# AV-Separation-Transformer Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/av_separation.log

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Default number of speakers to separate
DEFAULT_NUM_SPEAKERS=2

# Default device for inference (cpu, cuda, mps)
DEFAULT_DEVICE=cuda

# Model weights directory
MODEL_WEIGHTS_DIR=weights/

# Default model variant (lite, base, large, xl)
DEFAULT_MODEL_VARIANT=base

# Enable automatic mixed precision
USE_AMP=true

# Model cache directory
MODEL_CACHE_DIR=.cache/models/

# ============================================================================
# AUDIO/VIDEO PROCESSING
# ============================================================================

# Default audio sample rate
AUDIO_SAMPLE_RATE=16000

# Audio chunk size for streaming (seconds)
AUDIO_CHUNK_SIZE=2.0

# Video frame rate for processing
VIDEO_FPS=25

# Maximum audio file size (MB)
MAX_AUDIO_FILE_SIZE=100

# Maximum video file size (MB)
MAX_VIDEO_FILE_SIZE=500

# Temporary files directory
TEMP_DIR=/tmp/av_separation/

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Number of worker threads
NUM_WORKERS=4

# Maximum batch size for processing
MAX_BATCH_SIZE=8

# GPU memory fraction to use (0.0-1.0)
GPU_MEMORY_FRACTION=0.8

# Enable GPU memory growth
GPU_MEMORY_GROWTH=true

# CPU thread count (0 for auto)
CPU_THREAD_COUNT=0

# ============================================================================
# API SERVER SETTINGS
# ============================================================================

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8080

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# Maximum request size (MB)
MAX_REQUEST_SIZE=50

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# Enable CORS
ENABLE_CORS=true

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# WEBRTC SETTINGS
# ============================================================================

# STUN server URLs (comma-separated)
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# TURN server URL (optional)
# TURN_SERVER=turn:your-turn-server.com:3478

# TURN server username (optional)
# TURN_USERNAME=your-username

# TURN server password (optional)
# TURN_PASSWORD=your-password

# WebRTC connection timeout (seconds)
WEBRTC_TIMEOUT=30

# Maximum WebRTC connections
MAX_WEBRTC_CONNECTIONS=100

# ============================================================================
# MONITORING & METRICS
# ============================================================================

# Enable performance metrics collection
ENABLE_METRICS=true

# Metrics export interval (seconds)
METRICS_INTERVAL=60

# Prometheus metrics port
METRICS_PORT=9090

# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# DATABASE SETTINGS (if using database for caching/logging)
# ============================================================================

# Database URL (sqlite, postgresql, mysql)
# DATABASE_URL=sqlite:///av_separation.db

# Database connection pool size
# DB_POOL_SIZE=10

# Database connection timeout
# DB_TIMEOUT=30

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Weights & Biases API key (for experiment tracking)
# WANDB_API_KEY=your-wandb-api-key

# Weights & Biases project name
# WANDB_PROJECT=av-separation-transformer

# TensorBoard log directory
TENSORBOARD_LOG_DIR=logs/tensorboard/

# Model registry URL (for MLflow or similar)
# MODEL_REGISTRY_URL=http://localhost:5000

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# API authentication secret key
# API_SECRET_KEY=your-secret-key-here

# Enable API authentication
ENABLE_AUTH=false

# JWT token expiration (hours)
JWT_EXPIRATION_HOURS=24

# Enable request encryption
ENABLE_ENCRYPTION=false

# Allowed file extensions (comma-separated)
ALLOWED_AUDIO_EXTENSIONS=wav,mp3,m4a,flac,ogg
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,mkv,webm

# Maximum file upload size per request (MB)
MAX_UPLOAD_SIZE=100

# ============================================================================
# CLOUD DEPLOYMENT SETTINGS
# ============================================================================

# Cloud provider (aws, gcp, azure)
# CLOUD_PROVIDER=aws

# Cloud storage bucket for models
# MODEL_STORAGE_BUCKET=your-model-bucket

# Cloud storage region
# CLOUD_REGION=us-west-2

# Auto-scaling settings
# MIN_INSTANCES=1
# MAX_INSTANCES=10
# TARGET_CPU_UTILIZATION=70

# ============================================================================
# EXPERIMENTAL FEATURES
# ============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable model quantization
ENABLE_QUANTIZATION=false

# Enable model pruning
ENABLE_PRUNING=false

# Enable knowledge distillation
ENABLE_DISTILLATION=false

# Enable federated learning
ENABLE_FEDERATED_LEARNING=false

# ============================================================================
# TESTING SETTINGS
# ============================================================================

# Test data directory
TEST_DATA_DIR=tests/data/

# Enable test mode (uses smaller models/datasets)
TEST_MODE=false

# Test timeout (seconds)
TEST_TIMEOUT=600

# Generate test coverage reports
GENERATE_COVERAGE=true

# Minimum test coverage threshold
MIN_COVERAGE_THRESHOLD=90