# Environment Configuration for AV-Separation-Transformer

# Model Configuration
MODEL_PATH=weights/av_sepnet_base.pth
MODEL_DEVICE=cuda
MODEL_PRECISION=fp16
MAX_SPEAKERS=4

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION=4.0
AUDIO_N_FFT=512
AUDIO_HOP_LENGTH=160

# Video Configuration
VIDEO_FPS=30
VIDEO_IMAGE_SIZE=224
VIDEO_FACE_CONFIDENCE=0.8
VIDEO_MAX_FACES=6

# Training Configuration
BATCH_SIZE=16
LEARNING_RATE=1e-4
NUM_EPOCHS=100
CHECKPOINT_DIR=./checkpoints
LOG_DIR=./logs

# Inference Configuration
INFERENCE_BATCH_SIZE=1
INFERENCE_CHUNK_MS=20
INFERENCE_LOOKAHEAD_MS=40
MAX_LATENCY_MS=50

# Data Paths
DATA_ROOT=/data/voxceleb2
PROCESSED_DATA_DIR=./data/processed
CACHE_DIR=./.cache

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
ENABLE_TRACING=false
LOG_LEVEL=INFO

# Security
ENABLE_AUTH=false
JWT_SECRET_KEY=change-this-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost/avdb
REDIS_URL=redis://localhost:6379

# External Services (Optional)
OPENAI_API_KEY=
HUGGINGFACE_TOKEN=
WANDB_API_KEY=
WANDB_PROJECT=av-separation

# Development
DEBUG=false
TESTING=false
PROFILE=false